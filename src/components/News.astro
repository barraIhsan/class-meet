---
const { title, content, colSpan, rowSpan, flexDirection, imgSrc, imgAlt} = Astro.props;
---

<div class={`flex flex-${flexDirection} rounded-xl overflow-hidden col-span-${colSpan} row-span-${rowSpan} bg-[#f2f2f2]`}>
	<img class="size-full flex-1 object-cover" src={imgSrc} alt={title}>
	<div class="p-5 flex-1">
		<h3 class="text-2xl font-bold">{title}</h3>
		<p>{content}</p>
	</div>
</div>