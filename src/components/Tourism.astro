---
const { title, content, rate, imgSrc} = Astro.props;
---

<div class="relative h-[500px] bg-white rounded-3xl border border-black/15 shadow-[0_15px_16px_-15px] shadow-black/10 overflow-hidden">
	<img src={imgSrc} alt={title} class="w-full h-1/2 object-cover">
	<div class="w-fit absolute top-[42%] left-3">
		<img src="/class-meet/img/star.svg" alt="Star">
		<img src="/class-meet/img/star-fill.svg" alt="Star Fill" class={`absolute top-0 w-[${rate*20}%] h-full object-none object-left`}>
	</div>
	<div class="text-center text-darkGray py-8 px-6">
		<h3 class="text-2xl font-bold mb-5">{title}</h3>
		<p>{content}</p>
	</div>
</div>