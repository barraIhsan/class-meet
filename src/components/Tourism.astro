---
const { title, content, rate, imgSrc, link } = Astro.props;
---

<div class="flex-1 relative bg-white dark:bg-slate-800 rounded-3xl border border-black/15 dark:border-white/80 shadow-[0_15px_16px_-15px] shadow-black/10 overflow-hidden group cursor-pointer">
	<a href={link} target="_blank">
		<div class="overflow-hidden h-52">
			<img src={imgSrc} alt={title} class="size-full object-cover group-hover:scale-125 duration-300">
		</div>
		<div class="w-fit absolute top-[170px] left-3">
			<img src="/class-meet/img/star.svg" alt="Star">
			<img src="/class-meet/img/star-fill.svg" alt="Star Fill" class={`absolute top-0 w-[${rate*20}%] h-full object-none object-left`}>
		</div>
		<div class="text-center text-darkGray dark:text-white py-8 px-6">
			<h3 class="text-2xl font-bold mb-5">{title}</h3>
			<p>{content}</p>
		</div>
	</a>
</div>